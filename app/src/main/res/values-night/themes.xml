<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Etourism" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkerGrey</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="colorOnPrimary">@color/colorDarkerGrey</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Card" parent = "Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorDarkerGrey</item>
    </style>
    <style name="Text" parent = "TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorDarkerGrey</item>
    </style>
</resources>